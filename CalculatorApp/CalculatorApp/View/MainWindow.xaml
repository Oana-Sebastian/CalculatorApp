<Window x:Class="CalculatorApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CalculatorApp.ViewModel"
        Title="CalculatorApp" 
        Height="600" 
        Width="400" 
        Background="Black"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.DataContext>
        <local:CalculatorViewModel/>
    </Window.DataContext>

    <Grid Margin="10" Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="435*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="DisplayTextBlock"
                   Text="{Binding Display}"
                   FontSize="40"
                   Height="60"
                   Background="Black"
                   Foreground="White"
                   TextAlignment="Right"
                   VerticalAlignment="Center"
                   Grid.ColumnSpan="2"/>

        
        <UniformGrid Grid.Row="1" Columns="6" Margin="0,0,0,10" Background="Black" Grid.ColumnSpan="2">

            <Button Content="MC" Background="Black" Foreground="White"/>
            <Button Content="MR" Background="Black" Foreground="White"/>
            <Button Content="M+" Background="Black" Foreground="White"/>
            <Button Content="M-" Background="Black" Foreground="White"/>
            <Button Content="MS" Background="Black" Foreground="White"/>
            <Button Content="Mv" Background="Black" Foreground="White"/>
        </UniformGrid>

      
        <Grid Grid.Row="2" Grid.RowSpan="2" Background="Black" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            
            <Button Content="%" 
                    Grid.Row="0" Grid.Column="0" Margin="5" Background="Gray"
                    Command="{Binding OperatorCommand}" CommandParameter="%"
                    IsEnabled="{Binding OperatorsEnabled}"/>
            <Button Content="CE" 
                    Grid.Row="0" Grid.Column="1" Margin="5" Background="Gray"
                    Command="{Binding ClearCommand}" CommandParameter="CE"/>
            <Button Content="C" 
                    Grid.Row="0" Grid.Column="2" Margin="5" Background="Gray"
                    Command="{Binding ClearCommand}" CommandParameter="C"/>
            <Button Content="Back" 
                    Grid.Row="0" Grid.Column="3" Margin="5" Background="Gray"
                    Command="{Binding BackspaceCommand}"/>

          
            <Button Content="1/x" 
                    Grid.Row="1" Grid.Column="0" Margin="5" Background="Gray"
                    Command="{Binding OperatorCommand}" CommandParameter="1/x"
                    IsEnabled="{Binding OperatorsEnabled}"/>
            <Button Content="x²" 
                    Grid.Row="1" Grid.Column="1" Margin="5" Background="Gray"
                    Command="{Binding OperatorCommand}" CommandParameter="x²"
                    IsEnabled="{Binding OperatorsEnabled}"/>
            <Button Content="√(x)" 
                    Grid.Row="1" Grid.Column="2" Margin="5" Background="Gray"
                    Command="{Binding OperatorCommand}" CommandParameter="√(x)"
                    IsEnabled="{Binding OperatorsEnabled}"/>
            <Button Content="/" 
                    Grid.Row="1" Grid.Column="3" Margin="5" Background="Gray"
                    Command="{Binding OperatorCommand}" CommandParameter="/"
                    IsEnabled="{Binding OperatorsEnabled}"/>

           
            <Button Content="7" 
                    Grid.Row="2" Grid.Column="0" Margin="5"
                    Command="{Binding DigitCommand}" CommandParameter="7"/>
            <Button Content="8" 
                    Grid.Row="2" Grid.Column="1" Margin="5"
                    Command="{Binding DigitCommand}" CommandParameter="8"/>
            <Button Content="9" 
                    Grid.Row="2" Grid.Column="2" Margin="5"
                    Command="{Binding DigitCommand}" CommandParameter="9"/>
            <Button Content="×" 
                    Grid.Row="2" Grid.Column="3" Margin="5" Background="Gray"
                    Command="{Binding OperatorCommand}" CommandParameter="×"
                    IsEnabled="{Binding OperatorsEnabled}"/>

           
            <Button Content="4" 
                    Grid.Row="3" Grid.Column="0" Margin="5"
                    Command="{Binding DigitCommand}" CommandParameter="4"/>
            <Button Content="5" 
                    Grid.Row="3" Grid.Column="1" Margin="5"
                    Command="{Binding DigitCommand}" CommandParameter="5"/>
            <Button Content="6" 
                    Grid.Row="3" Grid.Column="2" Margin="5"
                    Command="{Binding DigitCommand}" CommandParameter="6"/>
            <Button Content="-" 
                    Grid.Row="3" Grid.Column="3" Margin="5" Background="Gray"
                    Command="{Binding OperatorCommand}" CommandParameter="-"
                    IsEnabled="{Binding OperatorsEnabled}"/>

            
            <Button Content="1" 
                    Grid.Row="4" Grid.Column="0" Margin="5"
                    Command="{Binding DigitCommand}" CommandParameter="1"/>
            <Button Content="2" 
                    Grid.Row="4" Grid.Column="1" Margin="5"
                    Command="{Binding DigitCommand}" CommandParameter="2"/>
            <Button Content="3" 
                    Grid.Row="4" Grid.Column="2" Margin="5"
                    Command="{Binding DigitCommand}" CommandParameter="3"/>
            <Button Content="+" 
                    Grid.Row="4" Grid.Column="3" Margin="5" Background="Gray"
                    Command="{Binding OperatorCommand}" CommandParameter="+"
                    IsEnabled="{Binding OperatorsEnabled}"/>

           
            <Button Content="+/-" 
                    Grid.Row="5" Grid.Column="0" Margin="5"
                    Command="{Binding OperatorCommand}" CommandParameter="+/-"
                    IsEnabled="{Binding OperatorsEnabled}"/>
            <Button Content="0" 
                    Grid.Row="5" Grid.Column="1" Margin="5"
                    Command="{Binding DigitCommand}" CommandParameter="0"/>
            <Button Content="." 
                    Grid.Row="5" Grid.Column="2" Margin="5"
                    Command="{Binding DigitCommand}" CommandParameter="."
                    IsEnabled="{Binding OperatorsEnabled}"/>
            <Button Content="=" 
                    Grid.Row="5" Grid.Column="3" Margin="5" Background="Cyan"
                    Command="{Binding EqualCommand}"/>
        </Grid>
    </Grid>
</Window>
